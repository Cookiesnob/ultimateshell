site_name: UltimateShell
site_url: https://g3g4x5x6.github.io/ultimateshell/
theme:
  name: material
  language: zh
  icon:
    repo: fontawesome/brands/git-alt
  repo_url: https://github.com/G3G4X5X6/ultimateshell
  repo_name: G3G4X5X6/ultimateshell

  features:
    - navigation.tabs
    - navigation.tabs.sticky
    - navigation.sections
    - toc.integrate

  palette: 
    - scheme: default
      toggle:
        icon: material/toggle-switch-off-outline 
        name: Switch to dark mode
    - scheme: slate 
      toggle:
        icon: material/toggle-switch
        name: Switch to light mode

nav:
  - 项目主页:   # 项目介绍
    - 欢迎使用 UltimateShell: index.md
  - 使用文档:
    - 安装: document/index.md
    - 基础: document/1.basic.md
    - 进阶: document/2.advance.md
    - 高级: document/3.professional.md
  - 相关文章:
    - 概述: blog/index.md

plugins:
#  - tags

extra:
  social:
    - icon: fontawesome/solid/paper-plane
      link: mailto:g3g4x5x6@foxmail.com

markdown_extensions:
  # Annotations
  - attr_list
  - md_in_html
  - pymdownx.superfences
  # Code blocks Error
#  - pymdownx.highlight:
#      anchor_linenums: true
#  - pymdownx.inlinehilite
#  - pymdownx.snippets
#  - pymdownx.superfences
  # Formatting
  - pymdownx.critic
  - pymdownx.caret
  - pymdownx.keys
  - pymdownx.mark
  - pymdownx.tilde
  # Data tables
  - tables
  # Lists
  - def_list
  - pymdownx.tasklist:
      custom_checkbox: true
  # Images
  - attr_list
  - md_in_html
  - meta
  # Icons + Emojis
  - pymdownx.emoji:
      emoji_index: !!python/name:materialx.emoji.twemoji 
      emoji_generator: !!python/name:materialx.emoji.to_svg
